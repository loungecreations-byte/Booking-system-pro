<?xml version="1.0"?>
<ruleset name="Booking Pro PHPCS">
    <description>Project coding standard targeting PSR-12 while excluding vendor artifacts.</description>

    <arg name="basepath" value="." />

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/dist/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>

    <rule ref="PSR12">
        <exclude-pattern>*/tests/*</exclude-pattern>
        <exclude-pattern>*/assets/*</exclude-pattern>
        <exclude-pattern>*/shared-libs/*</exclude-pattern>
    </rule>

    <file>booking-pro-module.php</file>
    <file>includes</file>
    <file>booking-core</file>
    <file>mu-plugins</file>
</ruleset>
